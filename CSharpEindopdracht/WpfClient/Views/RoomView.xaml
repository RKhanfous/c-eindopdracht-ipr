<UserControl x:Class="WpfClient.Views.RoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <StackPanel>
        <Label x:Name="SkribblRoomView" Content="Skribbl" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Grid x:Name="BiggestGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <Label x:Name="ParticipantsRoomView" Content="Participants:" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,75,0,0"></Label>
                <ListView x:Name="ListParticipantsRoom" HorizontalAlignment="Left" VerticalAlignment="Top"></ListView>
                <ListViewItem x:Name="ListParticipantItem"></ListViewItem>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <Label x:Name="RoomCodeLabel" Content="ROOMCODE" FontSize="20" Width="125" Margin="0,75,0,50"/>
                <Button Content="START" FontSize="20" Width="100" Height="35"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
